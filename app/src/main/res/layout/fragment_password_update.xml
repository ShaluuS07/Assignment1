<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pale_red"
    tools:context=".mvvm.views.ProfileFragment">


    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_update"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"/>



    <View
        android:id="@+id/view_currentpassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/view_pink"
        android:layout_marginTop="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_newpassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/view_pink"
        android:layout_marginTop="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_confirmpassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/view_pink"
        android:layout_marginTop="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_currentpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:hint="@string/current_password"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="@id/view_currentpassword"
        app:layout_constraintRight_toRightOf="@id/view_currentpassword"
        app:layout_constraintTop_toTopOf="@id/view_currentpassword" />


    <EditText
        android:id="@+id/et_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:hint="@string/new_password"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_currentpassword"
        app:layout_constraintTop_toTopOf="parent"
       />

    <EditText
        android:id="@+id/et_retypenewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:hint="@string/confirm_password"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_newpassword"
        app:layout_constraintTop_toTopOf="parent"
       />


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="multiply"
        android:text="@string/reset"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_newpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
